function imgs = load_images(folder)
        files = dir(fullfile(folder, '*.JPG'));
        if isempty(files)
            error('No PNG files found in %s', folder);
        end
        
        imgs = [];
        for i = 1:length(files)
            img = imread(fullfile(folder, files(i).name));
            img = double(img);
            if isempty(imgs)
                imgs = zeros([size(img), length(files)]);
            end
            imgs(:,:,i) = img;
        end
    end